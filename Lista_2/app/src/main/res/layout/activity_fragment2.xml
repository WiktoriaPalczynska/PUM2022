<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:translationY="179dp">

        <TextView
            android:id="@+id/case_info_const"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:text="Status:"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/case_isSolve"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:translationY="137dp">

        <TextView
            android:id="@+id/case_date_const"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:textSize="17dp"
            android:text="Date:" />

        <TextView
            android:id="@+id/case_date"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal"
        android:translationY="223dp">

        <TextView
            android:id="@+id/case_isSolve_const"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:textSize="17dp"
            android:text="Info:" />

        <TextView
            android:id="@+id/case_info"
            android:layout_width="95dp"
            android:layout_height="74dp"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:translationY="100dp">

        <TextView
            android:id="@+id/student_name_const"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:textSize="17dp"
            android:text="Name:" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <TextView
        android:id="@+id/case_id"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:textSize="33dp"
        android:ems="10"
        android:inputType="textPersonName" />

</FrameLayout>