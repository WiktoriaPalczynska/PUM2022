<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="90dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="26dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonT"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="69dp"
        android:onClick="onClickButton"
        android:text="TAK"
        app:layout_constraintBottom_toBottomOf="@+id/buttonN"
        app:layout_constraintEnd_toStartOf="@+id/buttonN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonN"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonN"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="6dp"
        android:onClick="onClickButton"
        android:text="NIE"
        app:layout_constraintBottom_toTopOf="@+id/buttonO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonT"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonO"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:layout_marginBottom="55dp"
        android:onClick="onClickButton"
        android:text="Oszukuj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonN" />

</androidx.constraintlayout.widget.ConstraintLayout>
